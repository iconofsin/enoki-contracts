{
    "name": "enoki-contracts",
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@typechain/ethers-v5": "^6.0.5",
        "@typechain/hardhat": "^1.0.1",
        "@types/chai": "^4.2.12",
        "@types/chai-as-promised": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "ethereum-waffle": "^3.1.0",
        "ethers": "^5.0.17",
        "ethlint": "^1.2.5",
        "hardhat": "^2.2.0",
        "hardhat-gas-reporter": "^1.0.4",
        "hardhat-typechain": "^0.3.5",
        "prettier": "^2.1.1",
        "prettier-plugin-solidity": "^1.0.0-alpha.57",
        "solidity-coverage": "^0.7.16",
        "ts-generator": "^0.1.1",
        "ts-node": "^9.0.0",
        "typechain": "^4.0.3",
        "typescript": "^4.0.3"
    },
    "scripts": {
        "lint": "prettier --list-different **/*.sol **/*.json",
        "lint:check": "prettier --check **/*.sol **/*.json",
        "lint:fix": "prettier --write **/*.sol **/*.json",
        "test": "npx hardhat test",
        "test-upgrades": "npx harhdat test test/upgrades.ts",
        "test-simulation": "npx hardhat test test/simulate-core.ts",
        "run-testnet": "sh ./run-testnet.sh",
        "deploy-testnet": "npx hardhat run scripts/deploy-testnet.ts --show-stack-traces --no-compile",
        "deploy-mainnet": "npx hardhat run scripts/deploy-mainnet.ts --no-compile --network mainnet",
        "deploy-pools-testnet": "npx hardhat run scripts/deploy-pools-testnet.ts --show-stack-traces",
        "deploy-pools-forknet": "npx hardhat run scripts/deploy-pools-testnet.ts --show-stack-traces --no-compile --network forknet",
        "deploy-pools-mainnet": "npx hardhat run scripts/deploy-pools-mainnet.ts --no-compile",
        "upgrade-staking-testnet": "npx hardhat run scripts/upgrade-staking-testnet.ts",
        "generate-upgrade-calls": "npx hardhat run scripts/generate-upgrade-calls.ts --network mainnet",
        "upgrade-staking-mainnet": "npx hardhat run scripts/upgrade-staking-mainnet.ts --no-compile --network mainnet"
    },
    "dependencies": {
        "@nomiclabs/hardhat-etherscan": "^2.1.1",
        "@openzeppelin/cli": "^2.8.2",
        "@openzeppelin/contracts": "^3.2.0",
        "@openzeppelin/contracts-ethereum-package": "^3.0.0",
        "@openzeppelin/hardhat-upgrades": "^1.6.0",
        "@openzeppelin/upgrades": "^2.8.0",
        "axios": "^0.20.0",
        "dotenv": "^8.2.0",
        "node-fetch": "^2.6.1"
    }
}
